<div class="container">
  <h1 class="center">Join ThoughtBox today!</h1>

  <%= form_for(@user) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>
    <%= f.submit "Sign Up", class: "btn" %>
  <% end %>
</div>
